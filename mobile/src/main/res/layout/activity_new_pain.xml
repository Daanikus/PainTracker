<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/fill">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_new_pain"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="?android:attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Pain Level:"
        android:id="@+id/new_pain_seek_text_view"
        android:paddingHorizontal="40dp"
        android:textColor="@color/black"/><!--background colour-->

    <SeekBar
        android:id="@+id/pain_seekbar"
        android:layout_width="350dp"
        android:scrollbarSize="@dimen/small_padding"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:max="10"
        android:progressBackgroundTint="@color/black"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:paddingHorizontal="40dp"
        android:text="Comment:"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/edit_pain"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:fontFamily="sans-serif-light"
        android:hint="@string/hint_word"
        android:inputType="textAutoComplete"
        android:paddingHorizontal="40dp"
        android:textSize="18sp"
        android:textColorHint="@color/black"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="@dimen/small_padding"
        android:id="@+id/human_image_view"
        android:paddingHorizontal="40dp"
        android:src="@mipmap/human_no_bg"/>

    <Space
        android:layout_height="25dp"/>
    <Button
        android:id="@+id/button_save"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:text="@string/button_save"
        android:paddingHorizontal="40dp"
        android:textColor="@color/buttonLabel" />




</GridLayout>